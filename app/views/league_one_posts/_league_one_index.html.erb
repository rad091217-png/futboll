<%= stylesheet_link_tag "league_one_index", media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="comments">
    <div class="comment">
        <% @user.league_one_posts.each do |league_one_post| %>
    </div>
    <div class="post">
        <div class="title">
            <p class="title">タイトル</p>
            <section class="title"><%= league_one_post.title %></section>
        </div>
        <div class="comments">
            <p class="comments">コメント</p>
            <section class="comments"><%= league_one_post.text %></section>
        </div>
        <div class="image">
            <section class="image"><%= image_tag league_one_post.display_image if league_one_post.image.attached? %>
            </section>
            <% if league_one_post.user_id == @current_user.id %>
            <div class="post_destroy">
                <%= button_to("投稿削除", league_one_post_path(league_one_post), {method: :delete, class: "btn-danger"}) %>
                <% end %>
            </div>
            <p class="user_name">ユーザー名 <%= link_to(league_one_post.user.name, user_path(league_one_post.user_id)) %></p>
            <% end %>
        </div>
    </div>
</div>