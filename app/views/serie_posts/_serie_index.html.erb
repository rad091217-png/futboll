<%= stylesheet_link_tag "serie_index", media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="comments">
    <div class="comment">
        <% @user.serie_posts.each do |serie_post| %>
    </div>
    <div class="post">
        <div class="title">
            <p class="title">タイトル</p>
            <section class="title"><%= serie_post.title %></section>
        </div>
        <div class="comments">
            <p class="comments">コメント</p>
            <section class="comments"><%= serie_post.text %></section>
        </div>
        <div class="image">
            <section class="image"><%= image_tag serie_post.display_image if serie_post.image.attached? %></section>
            <% if serie_post.user_id == @current_user.id %>
            <div class="post_destroy">
                <%= button_to("投稿削除", serie_post_path(serie_post), {method: :delete, class: "btn-danger"}) %>
                <% end %>
            </div>
            <p class="user_name">ユーザー名 <%= link_to(serie_post.user.name, user_path(serie_post.user_id)) %></p>
            <% end %>
        </div>
    </div>
</div>