<%= stylesheet_link_tag "premera_index", media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="comments">
    <div class="comment">
        <% @user.premera_posts.each do |premera_post| %>
    </div>
    <div class="post">
        <div class="title">
            <p class="title">タイトル</p>
            <section class="title"><%= premera_post.title %></section>
        </div>
        <div class="comments">
            <p class="comments">コメント</p>
            <section class="comments"><%= premera_post.text %></section>
        </div>
        <div class="image">
            <section class="image"><%= image_tag premera_post.display_image if premera_post.image.attached? %></section>
            <% if premera_post.user_id == @current_user.id %>
            <div class="post_destroy">
            <%= button_to("投稿削除", premera_post_path(premera_post), {method: :delete, class: "btn-danger"}) %>
            <% end %>
            </div>
            <p class="user_name">ユーザー名 <%= link_to(premera_post.user.name, user_path(premera_post.user_id)) %></p>
            <% end %>
        </div>
    </div>
</div>