<%= stylesheet_link_tag "champions_index", media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="comments">
    <div class="comment">
        <% @user.champions_posts.each do |champions_post| %>
    </div>
    <div class="post">
        <div class="title">
            <p class="title">タイトル</p>
            <section class="title"><%= champions_post.title %></section>
        </div>
        <div class="comments">
            <p class="comments">コメント</p>
            <section class="comments"><%= champions_post.text %></section>
        </div>
        <div class="image">
            <section class="image"><%= image_tag champions_post.display_image if champions_post.image.attached? %></section>
            <% if champions_post.user_id == @current_user.id %>
            <div class="post_destroy">
            <%= button_to("投稿削除", champions_post_path(champions_post), {method: :delete, class: "btn-danger"}) %>
             <% end %>
            </div>
            <p class="user_name">ユーザー名 <%= link_to(champions_post.user.name, user_path(champions_post.user_id)) %></p>
            <% end %>
        </div>
    </div>
</div>