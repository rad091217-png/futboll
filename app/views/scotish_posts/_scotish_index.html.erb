<%= stylesheet_link_tag "scotish_index", media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="comments">
    <div class="comment">
        <% @user.scotish_posts.each do |scotish_post| %>
    </div>
    <div class="post">
        <div class="title">
            <p class="title">スコティッシュタイトル</p>
            <section class="title"><%= scotish_post.title %></section>
        </div>
        <div class="comments">
            <p class="comments">スコティッシュコメント</p>
            <section class="comments"><%= scotish_post.text %></section>
        </div>
        <div class="image">
            <section class="image"><% if scotish_post.user_id == @current_user.id %><%= image_tag scotish_post.display_image if scotish_post.image.attached? %></section>
            <div class="post_destroy">
             <%= button_to("投稿削除", scotish_post_path(scotish_post), {method: :delete, class: "btn-danger"}) %>
            <% end %>
            </div>
            <p class="user_name">ユーザー名 <%= link_to(scotish_post.user.name, user_path(scotish_post.user_id)) %></p>
            <% end %>
        </div>
    </div>
</div>