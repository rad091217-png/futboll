<%= stylesheet_link_tag "nations_index", media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="comments">
    <div class="comment">
        <% @user.nations_posts.each do |nations_post| %>
    </div>
    <div class="post">
        <div class="title">
            <p class="title">ネーションズリーグタイトル</p>
            <section class="title"><%= nations_post.title %></section>
        </div>
        <div class="comments">
            <p class="comments">ネーションズリーグコメント</p>
            <section class="comments"><%= nations_post.text %></section>
        </div>
        <div class="image">
            <section class="image"><% if nations_post.user_id == @current_user.id %><%= image_tag nations_post.display_image if nations_post.image.attached? %></section>
            <div class="post_destroy">
             <%= button_to("投稿削除", nations_post_path(nations_post), {method: :delete, class: "btn-danger"}) %>
            <% end %>
            </div>
            <p class="user_name">ユーザー名 <%= link_to(nations_post.user.name, user_path(nations_post.user_id)) %></p>
            <% end %>
        </div>
    </div>
</div>