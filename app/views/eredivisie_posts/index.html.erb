<%= stylesheet_link_tag "eredivisie_index", media: 'all', 'data-turbolinks-track': 'reload' %>
<h1>エールディビジ投稿一覧</h1>
<h2 class="eredivisie_post_page">投稿ページはこちらへ<span class="new"><%= link_to "投稿ページへ", "/eredivisie_posts/new" %></h2>
    <div class="comments">
        <div class="comment">
        </div>
        <% @eredivisie_posts.each do |eredivisie_post| %>
        <div class="post">
            <div class="title">
                <p class="title">エールディビジタイトル</p>
                <section class="title"><%= eredivisie_post.title %></section>
            </div>
            <div class="comments">
                <p class="comments">エールディビジコメント</p>
                <section class="comments"><%= eredivisie_post.text %></section>
            </div>
            <div class="image">
                <section class="image">
                    <% if logged_in? %>
                    <% if eredivisie_post.user_id == @current_user.id %><%= image_tag eredivisie_post.display_image if eredivisie_post.image.attached? %>
                    <% else %>
                    <% end %>
                </section>
                <div class="post_destroy">
                    <%= button_to("投稿削除", eredivisie_post_path(eredivisie_post), {method: :delete, class: "btn-danger"}) %>
                    <% end %>
                </div>
                <p class="user_name">ユーザー名 <%= link_to(eredivisie_post.user.name, user_path(eredivisie_post.user_id)) %></p>
            </div>
        </div>
        <% end %>
    </div>