<%= stylesheet_link_tag "eredivisie_index", media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="comments">
<div class="comment">
        <% @user.eredivisie_posts.each do |eredivisie_post| %>
    </div>
    <div class="post">
        <div class="title">
            <p class="title">タイトル</p>
            <section class="title"><%= eredivisie_post.title %></section>
        </div>
        <div class="comments">
            <p class="comments">コメント</p>
            <section class="comments"><%= eredivisie_post.text %></section>
        </div>
        <div class="image">
            <section class="image"><%= image_tag eredivisie_post.display_image if eredivisie_post.image.attached? %></section>
            <% if eredivisie_post.user_id == @current_user.id %>
            <div class="post_destroy">
            <%= button_to("投稿削除", eredivisie_post_path(eredivisie_post), {method: :delete, class: "	btn-danger"}) %>
             <% end %>
            </div>
            <p class="user_name">ユーザー名 <%= link_to(eredivisie_post.user.name, user_path(eredivisie_post.user_id)) %></p>
            <% end %>
        </div>
    </div>
</div>